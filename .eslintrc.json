{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "eslint-plugin-react",
    "react"
  ],
  "settings": {
    "react": {
      "version": "16.0"
    }
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": ["JSXAttribute"],
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "error",
      {"allow": ["log"]}
    ],
    "no-var": 2,
    "prefer-const": 2,
    "react/react-in-jsx-scope": 0,
    "react/no-unknown-property": 0,
    "react/prop-types": 0
  }
}
